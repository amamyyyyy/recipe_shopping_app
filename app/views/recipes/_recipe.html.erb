<div class="card">
  <%= link_to image_tag(recipe.image, class: :card__img ), recipe_path(recipe.id)%>
  <div class="card__body">
    <%= link_to recipe.title, recipe_path(recipe.id), class: :card__title%>
    <p class="card__summary">
      <%= recipe.description %>
    </p>
    <%= link_to recipe.user.name, recipe_path(recipe.user.id), class: :card__user %>
  </div>
</div>